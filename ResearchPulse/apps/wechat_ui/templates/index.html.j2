{% extends "base.html.j2" %}
{% block title %}Articles{% endblock %}
{% block content %}
<section class="controls">
  <div class="control-row">
    <label>
      <span class="label-text">Account</span>
      <select id="accountSelect"><option value="">All</option></select>
    </label>
    <label>
      <span class="label-text">Search</span>
      <input id="searchInput" type="search" placeholder="Search title / digest..." />
    </label>
    <label>
      <span class="label-text">Sort by</span>
      <select id="sortSelect">
        <option value="publish_time">Publish Time</option>
        <option value="crawl_time">Crawl Time</option>
        <option value="title">Title</option>
      </select>
    </label>
  </div>
</section>

<section id="articleList" class="article-list"></section>
<div id="pagination" class="pagination"></div>
{% endblock %}
{% block scripts %}
<script>window.UI_CONFIG = { defaultPageSize: {{ page_size }} };</script>
<script src="/wechat/ui/static/js/app.js"></script>
{% endblock %}
